@{
    ViewBag.Title = "DIRECTION SETTING BOARD";
}
@{
    Layout = "~/Views/Shared/DirectionSettingBoardLayout.cshtml";
}
<head>
<style>

/*style marker*/
     
.numberCircle {
    display:block;
    width:20px;
    height:20px;
    line-height:20px;
    border: 2px solid #f5f5f5;
    border-radius: 50%;
    color:#f5f5f5;
    text-align:center;
    text-decoration:none;
    background: Green;
    box-shadow: 0 0 8px black;
    font-size:11px;
    position:absolute;
    /*font-weight:bold;*/
    
}
.numberCircle:hover {
   -webkit-transform: scale(0.8);
        -ms-transform: scale(0.8);
        transform: scale(0.8);
}

.numberCircle a:link {
  color: white;
}

.numberCircle a:hover {
  color: white;
}

.numberCircle a:visited {
  color: black;
}

/**/
.the-legend {
    border-style: none;
    border-width: 0;
    font-size: 14px;
    line-height: 20px;
    margin-bottom: 0;
}
.the-fieldset {
    border: 2px groove threedface #444;
    -webkit-box-shadow:  0px 0px 0px 0px #000;
