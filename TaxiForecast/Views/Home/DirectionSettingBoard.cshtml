}
</style>
    <script src="http://maps.google.com/maps?file=api&amp;v=2&amp;sensor=true&amp;key=AIzaSyCnhTEOSFF68NhiWoI-qyhFR3OR3AmuAtE" type="text/javascript"></script>
    <script src="../../Content/themes/TaxiForecast/js/marker_label.js" type="text/javascript"></script>
</head>


<!-- modal-dialog: ConfigurationBoard -->
<!-- Modal -->
  <div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog">
    
      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Bảng thiết lập thông số bản đồ</h4>
        </div>
        <div class="modal-body">
            <fieldset class="well the-fieldset">
                <legend class="the-legend">Thiết lập vùng</legend>
                <div class="form-group input-group">
                    <span class="input-group-addon" style="width:120px;">Góc trái dưới</span>
                    <input size="100" type="text" class="form-control" id ="leftDownPoint" placeholder="leftDownPoint">
                </div>
                <div class="form-group input-group">
                    <span class="input-group-addon" style="width:120px;">Góc phải trên</span>
                    <input size="100" type="text" class="form-control" id ="rightTopPoint" placeholder="rightTopPoint">
                </div>
            </fieldset>
            <fieldset class="well the-fieldset">
                <legend class="the-legend">Thiết lập ô lưới</legend>
                <div class="form-group input-group">
                    <span class="input-group-addon" style="width:120px;">Màu sắc</span>
                    <input size="100" type="text" class="form-control" id="MapViewCellColor" placeholder="MapViewCellColor">
                </div>
                <div class="form-group input-group">
                    <span class="input-group-addon" style="width:120px;">Độ trong</span>
                    <input size="100" type="text" class="form-control" id="MapViewCellTransparent" placeholder="MapViewCellTransparent">
                </div>
                <div class="form-group input-group">
                    <span class="input-group-addon" style="width:120px;">Màu sắc viền</span>
                    <input size="100" type="text" class="form-control" id="MapViewCellBorder" placeholder="MapViewCellBorder">
                </div>
                <div class="form-group input-group" >
                    <span class="input-group-addon" style="width:120px;">Độ trong viền</span>
                    <input size="100" type="text" class="form-control" id="MapViewCellBorderTransparent" placeholder="MapViewCellBorderTransparent">
                </div>
                <div class="form-group input-group">
                    <span class="input-group-addon" style="width:120px;">Chia ô</span>
                    <input size="100" type="text" class="form-control" id="NumberOfCells" placeholder="NumberOfCells">
                </div>
            </fieldset>
        </div>
        <div class="modal-footer" style="text-align:center;">
          <button type="button" class="btn btn-success" onclick="changeConfiguration('update')">Cập nhật</button><button type="button" class="btn btn-default" data-dismiss="modal">Bỏ qua</button>
        </div>
      </div>
      
    </div>
  </div>
 <!-- /modal-dialog -->
